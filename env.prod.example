# Production Environment Variables
# Copy this file to .env.prod and customize values

# Application
NODE_ENV=production
APP_PASSWORD=change_this_password

# Email retention (in days)
EMAIL_RETENTION_DAYS=365

# SMTP Configuration
SMTP_PORT=25
SMTP_HOST=0.0.0.0
SMTP_DOMAIN=mail.example.com

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Database
DB_PATH=/app/data

