{
  "name": "junk-mail",
  "version": "1.0.0",
  "description": "Disposable email server with Next.js and local SMTP",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "smtp": "tsx src/smtp/server.ts",
    "smtp:dev": "tsx watch src/smtp/server.ts",
    "docker:up": "docker compose up --build --force-recreate --no-deps "
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.4.1",
    "mailparser": "^3.7.1",
    "nanoid": "^5.0.7",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.3.0",
    "sanitize-html": "^2.13.1",
    "smtp-server": "^3.13.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/sanitize-html": "^2.13.0",
    "@types/smtp-server": "^3.5.10",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "sass": "^1.77.8",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
